<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="onlineclass.home.mapper.ScoreMapper">


    <resultMap id="scoreMap" type="onlineclass.home.model.Score">
        <id column="scoreId" property="scoreId"/>
        <result column="endTime" property="endTime"/>
        <result column="score" property="score"/>
        <result column="detials" property="detials"/>
        <association property="student" column="sid" select="core.mapper.UserMapper.selectByPrimaryKey"/>
        <association property="student" column="sid" select="core.mapper.UserMapper.selectByPrimaryKey"/>

        <association property="exam" column="eid" select="findExam"/>
    </resultMap>

    <resultMap id="examMap" type="onlineclass.home.model.Exam">
        <id column="eid" property="eid"/>
        <result column="startTimes" property="startTimes"/>
        <result column="examTime" property="examTime"/>
        <association property="teacher" column="tid" select="core.mapper.UserMapper.selectByPrimaryKey"/>

    </resultMap>

    <select id="findExam" resultMap="examMap">
        SELECT  * FROM  exams  WHERE eid=#{eid}
    </select>
    <select id="findUserAllScore" resultMap="scoreMap">
        SELECT * FROM scores WHERE sid=#{uid}
    </select>

    <select id="finduserLastScore" resultMap="scoreMap">
        SELECT  * FROM scores WHERE sid=#{uid} ORDER BY scoreId DESC LIMIT 1
    </select>
</mapper>